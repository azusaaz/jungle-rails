<tr>
  <td>
    <h5>rating: 
    <% (1..review.rating).each do |i| %>
    <span class="glyphicon glyphicon-star text-danger"></span>  
    <%end %>
    <% (1..5-review.rating).each do |i| %>
      <span class="glyphicon glyphicon-star-empty"></span>  
      <%end %>

    @<%= review.updated_at %>
    </h5>
    <h5><%= review.user.first_name %> <%= review.user.last_name %>  </h5>
    <h5><%= review.description %></h5>
    
    <a>
    <% if current_user %>
      <% if current_user.id == review.user.id %>
      <%= link_to fa_icon('trash'), product_review_path(@product, review), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    <% end %>

  </td>
</tr> 